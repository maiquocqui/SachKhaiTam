.container
	section.cart-page
		.cart-progress
			ul
				li.active
					.number 1
					label Đăng nhập
				li.active
					.number 2
					label Địa chỉ giao hàng
				li
					.number 3
					label Than toán / Đặt mua
		.row
			.col-12.col-lg-9
				.cart-step.s4
					.small-title
						span KHÁCH HÀNG MỚI / ĐĂNG NHẬP
					.cart-login
						.form-wrap
							.form-group
								label Họ tên (Anh/Chị):
								input(type="text" placeholder="")
							.form-group
								label Email:
								input(type="text" placeholder="")
							.form-group
								label Số điện thoại:
								input(type="text" placeholder="")
							.form-group
								label Địa chỉ:
								input(type="text" placeholder="")
							.form-group
								label Tỉnh/Thành phố:
								select
									option TP.Hồ Chí Minh
							.form-group
								label Quận huyện:
								select
									option Quận 1
							.agree
								input#ag1(type="checkbox", name="agree")
								label(for="ag1") Giao hàng tới địa chỉ khác (Nếu quý khách muốn gửi tặng, hoặc nhờ người khác nhận thay)
							.btn-wrap
								a.btn-login(href="#!") TIẾP TỤC
			.col-12.col-lg-3
				.cart-step.s2
					.cart-title-info Thông tin đơn hàng
						a.btn-edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
					.cart-product
						.title Bạn có 1 sản phẩm trong giỏ hàng
						.item
							a.img(href="#!")
								img(src="img/pr2.png", alt="")
							.caption
								a.name(href="#!") Đắc Nhân Tâm - Bí quyết để thành công
								.amount Số lượng: 1
							.price 57.800đ
					.cart-overview
						ul
							li
								label(for="") 
									strong Tổng giỏ hàng
								.value 57.800đ
							li
								label(for="") Phí vận chuyển
								.value 0đ
							li
								label(for="") Phí Bưu điện phụ thu 
								.value Chưa có
							li
								label(for="") Dịch vụ cộng thêm
								.value Chưa có
					.cart-total
						label Thành tiền
						.value
							strong 57.800đ
							span (Đã bao gồm VAT)
					.cart-des Bạn sẽ được tặng 3 
						span.text-green Búp sen 
						|sau khi hoàn tất thanh toán đơn hàng này
